{% extends "base.html.twig" %}
{% block form %}
<div class="col-md-5">
    <form action="{{ path('get_form', {'formName': 'design_tech_claim'}) }}" method="post" id="design_claim">
        <h1 class="h1">Пожелание к дизайну сайта</h1>
        <div class="form-group">
            <textarea type="text" class="form-control required" rows="3" name="site_style"
                      placeholder="Какие стилевые решения вы считаете наиболее подходящими для вашего сайта, и укажите референсы"></textarea>
        </div>
        <div class="form-group">
            <textarea type="text" class="form-control required" name="impression"
                      placeholder="Какое впечатление должен производить сайт на посетителя"></textarea>
        </div>
        <div class="form-group">
            <textarea type="text" class="form-control required" name="design_nos"
                   placeholder="Что бы вы категорически не хотели видеть в дизайне вашего сайта"></textarea>
        </div>
        <div class="form-group">
            <textarea type="text" class="form-control required" name="bad_associations"
                   placeholder="Какие ассоциации не должен вызывать сайт"></textarea>
        </div>
        <div class="next-btn">
            <button type="submit" class="btn btn-default">
                <span class="next-text">Далee ></span>
            </button>
        </div>
    </form>
</div> <!-- form -->
{% endblock %}