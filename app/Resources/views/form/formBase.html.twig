{% extends "::base.html.twig" %}
{% form_theme form ':form/block:field.html.twig' ':form/block:checkbox.html.twig' %}
{% block content %}

    <div {% if form.vars['name'] != 'company' %} class="animated fadeInRight" {% endif %} >
    <div class="col-md-5">
        {{ form_start(form)}}

            <h1 class="h1">{{ formHeader }}</h1>

            {{ form_widget(form) }}

            <div class="next-btn">
                <button type="submit" class="btn btn-default">
                    <span class="next-text">{{ buttonLabel }}</span>
                </button>
            </div>


        {{ form_end(form) }}
    </div>
    </div>

{% endblock %}