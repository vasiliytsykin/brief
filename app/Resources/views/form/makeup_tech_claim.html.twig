{% extends "base.html.twig" %}
{% block form %}
<div class="col-md-5">
    <form action="{{ path('get_form', {'formName': 'code_tech_claim'}) }}" method="post" id="design_tech_claim">
        <h1 class="h1">Технические требования верстке сайта</h1>
        <div class="form-group">
            <textarea type="text" class="form-control required" rows="6" name="makeup_claims"
                      placeholder="Наличие ограничений по верстке сайта, если есть (особенности разметки, микроразметка, использование ссылок на протоколы приложений whatsapp, viber, skype, ссылки на магазины приложений (AppStore, Google Play, Windows Store"></textarea>
        </div>
        <div class="form-group">
            <textarea type="text" class="form-control required" name="libs"
                      placeholder="Используемые js-библиотеки и версии (JQuery, Angular JS, Bootstrap)"></textarea>
        </div>
        <div class="next-btn">
            <button type="submit" class="btn btn-default">
                <span class="next-text">Далee ></span>
            </button>
        </div>
    </form>
</div> <!-- form -->
{% endblock %}